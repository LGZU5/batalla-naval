<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="1000.0" styleClass="bg-home" stylesheets="@styles/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyect.batallanaval.controllers.GameController">

    <top>
        <VBox alignment="CENTER">
            <children>
                <HBox alignment="CENTER">
                    <children>
                        <Label styleClass="title" text="¡FASE DE ATAQUE!" />
                    </children>
                    <padding>
                        <Insets bottom="5" top="15" />
                    </padding>
                </HBox>

                <Label fx:id="lblMensajeTurno" styleClass="label-message" text="Esperando inicio de turno..." />
            </children>
            <padding>
                <Insets bottom="10" />
            </padding>
        </VBox>
    </top>

    <center>
        <HBox alignment="TOP_CENTER" spacing="50" BorderPane.alignment="CENTER">

            <VBox alignment="CENTER" spacing="10">
                <Label styleClass="label-board-title" text="TU TABLERO (POSICIÓN)" />
                <GridPane fx:id="playerGrid" styleClass="grid-board">
                </GridPane>
            </VBox>

            <VBox alignment="CENTER" spacing="10">
                <Label styleClass="label-board-title" text="OPONENTE (ATAQUE)" />
                <GridPane fx:id="gridMaquina" styleClass="grid-board">
                </GridPane>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-spacing: 20;">
            <Button fx:id="btnCheck" mnemonicParsing="false" text="REVISION" />
            <Button fx:id="btnAtacar" text="ATACAR" />
            <padding>
                <Insets bottom="20" top="20" />
            </padding>
        </HBox>
    </bottom>

</BorderPane>

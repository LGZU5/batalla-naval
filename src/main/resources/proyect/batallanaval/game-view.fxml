<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="1000.0" styleClass="bg-home" stylesheets="@styles/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyect.batallanaval.controllers.GameController"> <top>
    <HBox alignment="CENTER">
        <children>
            <Label styleClass="title" text="¡FASE DE ATAQUE!" />
        </children>
        <padding>
            <Insets bottom="15" top="15" />
        </padding>
    </HBox>
</top>

    <center>
        <HBox alignment="TOP_CENTER" spacing="50" BorderPane.alignment="CENTER">

            <VBox alignment="CENTER" spacing="10">
                <Label styleClass="label-board-title" text="TU TABLERO (POSICIÓN)" />
                <GridPane fx:id="playerGrid" styleClass="grid-board">
                </GridPane>
            </VBox>

            <VBox alignment="CENTER" spacing="10">
                <Label styleClass="label-board-title" text="OPONENTE (ATAQUE)" />
                <GridPane fx:id="gridMaquina" styleClass="grid-board">
                </GridPane>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-spacing: 20;">
            <Button fx:id="btnAtacar" text="ATACAR" />
         <Button fx:id="btnCheck" mnemonicParsing="false" text="REVISION" />
            <padding>
                <Insets bottom="20" top="20" />
            </padding>
        </HBox>
    </bottom>

</BorderPane>
